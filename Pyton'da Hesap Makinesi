while True:
    print("==========HESAP MAKİNESİ==========")
    print(" ")
    print(" ")
    x = input("İLK SAYIYI GİRİN: ")
    y = input("İKİNCİ SAYIYI GİRİN: ")
    print(" ")
    print("↓TOPLAMA SONUCU↓")
    print(float(x)+float(y))
    print(" ")
    print("↓ÇIKARMA SONUCU↓")
    print(float(x)-float(y))
    print(" ")
    print("↓ÇARPMA SONUCU↓")
    print(float(x)*float(y))
    print(" ")
    print("↓BÖLME SONUCU↓")
    print(float(x)/float(y))
    print(" ")
    print(" ")
